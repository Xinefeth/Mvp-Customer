<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.gastos_ocr">

    <!-- ðŸ” PERMISOS NECESARIOS -->
    <!-- Permiso para usar la cÃ¡mara -->
    <uses-permission android:name="android.permission.CAMERA" />

    <!-- Permiso para leer imÃ¡genes (Android 13 en adelante) -->
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />

    <!-- Permiso para leer archivos en versiones anteriores -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <!-- Permiso para escribir archivos (opcional, si planeas guardar fotos procesadas) -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="29" />

    <application
        android:label="gastos_ocr"
        android:name="${applicationName}"
        android:icon="@mipmap/ic_launcher">

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:taskAffinity=""
            android:theme="@style/LaunchTheme"
            android:configChanges="orientation|keyboardHidden|keyboard|screenSize|smallestScreenSize|locale|layoutDirection|fontScale|screenLayout|density|uiMode"
            android:hardwareAccelerated="true"
            android:windowSoftInputMode="adjustResize">

            <!-- Tema mostrado antes de que Flutter cargue -->
            <meta-data
                android:name="io.flutter.embedding.android.NormalTheme"
                android:resource="@style/NormalTheme" />

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Requerido para que Flutter registre los plugins -->
        <meta-data
            android:name="flutterEmbedding"
            android:value="2" />
    </application>

    <!-- Permite al motor Flutter procesar texto desde otras apps -->
    <queries>
        <intent>
            <action android:name="android.intent.action.PROCESS_TEXT" />
            <data android:mimeType="text/plain" />
        </intent>
    </queries>
</manifest>
